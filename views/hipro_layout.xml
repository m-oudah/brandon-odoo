<openerp>
    <data>
        <template id="hipro_layout">
            <xpath expr="//div[@t-attf-class='header o_company_#{company.id}_layout']" position="replace">

                <div class="header" style="border-bottom:1px solid #0e7ebb; padding-bottom:5px; ">
                    <div class="row">
                        <div class="col-6" style="font-size:10px;">

                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" width="250px" alt="Logo"/>
                            <div>WE SPECIALIZE IN YOUR ANIMALS FEED</div>
                            <div>EFFICIENCY IMPROVEMENT AND GROWTH INCREASE.</div>
                        </div>
                        <div class="col-6 text-right ">
                            <h4 class="mt0" t-field="company.report_header"/>
                            <div name="company_address" class="float-right mb4">
                                <!--                                <span class="company_address" t-field="company.partner_id"-->
                                <!--                                    t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>-->
                                <strong>
                                    <h6 t-field="company.company_registry"/>
                                </strong>
                                <h6 t-field="company.street2"/>
                                <!--                                 <h6 t-if="company.street1"  t-field="company.street1"/>-->
                                <h6 t-field="company.country_id"/>
                                <h6 t-field="company.email"/>
                                <!--                                 <h6 t-field="company.website"/>-->

                            </div>
                        </div>
                    </div>
                </div>
            </xpath>


            <div t-attf-class="article o_report_layout_boxed o_company_#{company.id}_layout"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')" style="margin-top:30px; background:url('/brandon/static/src/hipro_bg.png') no-repeat; background-size: contain; padding-top:40px; background-position: center;  ">
                <div class="pt-5">
                    <!-- This div ensures that the address is not cropped by the header. -->
                    <t t-call="web.address_layout"/>
                </div>
                <t t-raw="0"/>
            </div>

            <xpath expr="//div[@t-attf-class='footer o_boxed_footer o_company_#{company.id}_layout']"
                   position="replace">

                <div t-attf-class="footer o_boxed_footer" style="border:0px; padding:10px;">
                    <div class="row mb8">
                        <div class="col-1"  style="margin-right:5px;">
                            <img src='/brandon/static/src/iso.png' width="80px"/>
                        </div>
                        <div class="col-1" >
                            <img src='/brandon/static/src/hipro_qr.png' width="65px"/>

                        </div>
                        <div class="col-6" style="border-bottom:5px solid #fbb823; margin-left:10px;">


                        </div>


                        <div class="col-4 text-center" style="border-top:1px solid #000; padding:10px; color:#000; ">
                            <div style="font-size:15px;">
                                QUALITY CONTROL DEPARTMENT,
                            </div>
                            <strong>
                                <h6>
                                    HIPRO IÃ‡ VE DIS TICARET SAN.VE TIC. LTD. STI
                                </h6>
                            </strong>
                            <!--                            <div t-if="report_type == 'pdf'">-->
                            <!--                                Pages:-->
                            <!--                                <span class="page"/>-->
                            <!--                                /-->
                            <!--                                <span class="topage"/>-->
                            <!--                            </div>-->

                        </div>
                    </div>
                </div>

            </xpath>
        </template>
    </data>
</openerp>
